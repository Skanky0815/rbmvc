<?php if ($this->hasAccess($this->url(array('action' => 'add')))): ?>
    <div class="btn-group">
        <?php echo $this->button('add'); ?>
    </div>

    <hr>
<?php endif; ?>

<div class="row">
    <div class="col-12">
        <?php foreach ($this->entrys as $key => $entry): ?>
            <div class="col-6">
                <h2><?php echo $entry->getTitle(); ?></h2>
                <blockquote>
                    <p><?php echo $entry->getText(); ?></p>
                    <small><?php echo $entry->getUser()->getUsername(); ?>
                        / <?php echo $this->dateFormater($entry->getDate()); ?></small>
                </blockquote>

                <?php if ($this->hasAccess($this->url(array('action' => 'edit')))
                    || $this->hasAccess($this->url(array('action' => 'delete')))
                ): ?>
                    <div class="btn-group">
                        <a class="btn-danger btn delete" data-toggle="modal" href="<?php echo $this->url(
                            array('action' => 'delete'
                                  , 'id'   => $entry->getId()
                            ), true
                        ); ?>">
                            <i class="icon-trash"></i>
                        </a>
                        <?php echo $this->button('edit', $entry->getId()); ?>
                    </div>
                <?php endif; ?>
                <hr>
            </div>
        <?php endforeach; ?>
    </div>
</div>